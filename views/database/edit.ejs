<% include ../partials/header %>


    <div class="row justify-content-center">
        <div class="py-5 text-center">
                <h1 name="date">Edit <%=database.month %> <%= database.year %> input</h1>
        </div>
    </div>
    <div class="row justify-content-center">
            <div class="col-md-4 order-md-2 mb-4">
            <form action="/database/<%=database._id%>?_method=PUT" method="POST">
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h2><%= currentUser.username%></h2>
                    </div>
                <div class="panel-body"> 
                    <div class="form-group">
                        <label for="month-input">Month:</label>
                        <input class="form-control" name="date" type="month" value="<%=database.date%>" id="month-input">
                    </div>
                    <div class="form-group">
                        <label for="rate">Hourly rate:</label>
                        <input id="rate"class="form-control" type="number" name="rate" value="<%=database.rate%>" min="0.01" step="0.01">
                    </div>
                    <div class="form-group">
                        <label for="rate">Bonus:</label>
                        <input id="bonus" class="form-control" type="number" name="bonus" value="<%=database.bonus%>" min="0" step="10">
                    </div>
                    <div class="form-group">
                        <label for="rate">Vacation:</label>
                        <input id="vacation" class="form-control" type="number" name="vacation" value="<%=database.vacation%>" min="0" step="0.5">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                    </div>
                </div>
                 </div>
            </form>
            <a href="/database">Back</a>
        </div>
    </div>


<% include ../partials/footer %>
