<% include ../partials/header %>


    <div class="row">
        <h1 style="text-align: center">Edit <%=database.month %> <%= database.year %> input</h1>
        <div style="width: 30%; margin: 30px auto">
            <form action="/database" method="POST">
                <!--<div class="form-group">-->
                <!--    <input class="form-control" type="month" value="2019-01" name="month" placeholder="month">-->
                <!--</div>-->
                <div class="panel panel-primary">
                    <div class="panel-heading">
                        <h2><%= currentUser.username%></h2>
                    </div>
                    <div class="panel-body">
                        <div id="date">
                         <span class="date-months">
                            <label for="month">Month:</label>
                            <select name="month">
                              <option selected><%=database.month%></option>
                              <option>January</option>
                              <option>February</option>
                              <option>March</option>
                              <option>April</option>
                              <option>May</option>
                              <option>June</option>
                              <option>July</option>
                              <option>August</option>
                              <option>September</option>
                              <option>October</option>
                              <option>November</option>
                              <option>December</option>
                            </select>
                          </span>
                          <span class="date-years">
                            <label for="year">Year:</label>
                            <select name="year">
                              <option selected> <%=database.year%></option>
                              <option>2019</option>
                              <option>2018</option>
                              <option>2017</option>
                              <option>2016</option>
                              <option>2015</option>
                              <option>2014</option>
                              <option>2013</option>
                              <option>2012</option>
                              <option>2011</option>
                              <option>2010</option>
                              <option>2009</option>
                              <option>2008</option>
                            </select>
                          </span>
                        </div>
                        <div class="form-group">
                            <label for="rate">Hourly rate:</label>
                            <input id="rate"class="form-control" type="number" name="database[rate]" value="<%=database.rate%>" min="0.01" step="0.01">
                        </div>
                        <div class="form-group">
                            <label for="rate">Bonus:</label>
                            <input id="bonus" class="form-control" type="number" name="database[bonus]" value="<%=database.bonus%>" min="0" step="10">
                        </div>
                        <div class="form-group">
                            <label for="rate">Vacation:</label>
                            <input id="vacation" class="form-control" type="number" name="database[vacation]" value="<%=database.vacation%>" min="0" step="0.5">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                        </div>
                    </div>
                 </div>
            </form>
            <a href="/database">Back</a>
        </div>
    </div>


<% include ../partials/footer %>
